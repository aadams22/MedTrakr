<!DOCTYPE html>

	<% include ../partials/header.ejs %>


			<div id="medcont1"class="meds-container">
				<h3>Add Medication</h3>
					<form action="/users/<%=info.id%>" method="POST">
						<input type="text" name="name" placeholder="name">
						<input type="text" name="rx" placeholder="rX number">
						<input type="text" name="dosage" placeholder="dosage">
						<input type="text" name="directions" placeholder="directions">
						<input type="text" name="refills" placeholder="refills">
						<input type="submit" value="Add">
					</form>
				</div>
				<div id="medcont2"class="meds-container">
				<h3>Edit Meds</h3>
					<form action="/users/<%=info.id%>" method="POST">
						<input type="text" name="name" placeholder="Name">
						<input type="text" name="rx" placeholder="rX Number">
						<input type="text" name="dosage" placeholder="Dosage">
						<input type="text" name="directions" placeholder="Directions">
						<input type="text" name="refills" placeholder="refills">
						<input type="hidden" name="_method" value="PUT"/>
					<input type="submit" value="Edit">
				</form>
			</div>

		

		<div id="home-container">
		<h2>My Meds</h2>
			<ul>
				<%for(var i=0; i < info.meds.length; i++){%>
					<li><%=info.meds[i].name%></li>
					<li><%=info.meds[i].dosage%></li>
					<li><%=info.meds[i].directions%></li>
				<%}%>
			</ul>
		</div>
	<div id="name-palet">
		<h2 id="users-name">Hi <%=info.profile.firstName%></h2>
		<a id="profile-link" href="/users/<%=info.id%>/myprofile">Profile</a>	
	</div>



</body>
</html>